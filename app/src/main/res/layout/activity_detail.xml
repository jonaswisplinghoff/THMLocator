<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.thm.thmlocator.app.DetailActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:src="@drawable/raum_test"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageViewCoverImage" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/gradient_detail"
        android:layout_alignParentEnd="true" />



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignBottom="@id/imageViewCoverImage"
        android:src="@color/thm_green"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/green_circle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="138dp"
        android:id="@+id/imageView3" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="center"
        android:text="Large Text"
        android:id="@+id/textViewRoomName"
        android:layout_below="@+id/textViewEventName"
        android:singleLine="true"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large TextTextText"
        android:id="@+id/textViewEventType"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/textViewEventName"
        android:singleLine="true"
       />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium TextMedium TextMedium Text"
        android:id="@+id/textViewEventName"
        android:textColor="#ffffff"
        android:layout_below="@+id/textViewEventType"
        android:layout_marginLeft="10dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewCourseOfStudies"
        android:layout_below="@+id/imageView"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARSnova"
        android:id="@+id/buttonARSnova"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/imageButtonTeacher"
        android:background="@drawable/teacher"
        android:layout_above="@+id/buttonARSnova"
        android:layout_centerHorizontal="true"
        android:clickable="true" />


    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewTeacherName"
        android:singleLine="true"
        android:layout_alignTop="@+id/imageButtonTeacher"
        android:layout_alignRight="@+id/imageButtonTeacher"
        android:layout_marginRight="20dp"
        android:layout_marginTop="41dp" />
</RelativeLayout>
