<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_data_row_Click"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="70dp">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/relativeLayout1"
        android:layout_margin="8dp">
        <ImageView
            android:id="@+id/list_item_data_row_ImageView_Icon"
            android:src="@drawable/green_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/list_item_data_row_TextView_Titel"
            android:singleLine="true" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="left|center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/list_item_data_row_TextView_SubTitel"
            android:layout_gravity="left|center_vertical"
            android:singleLine="true" />
    </LinearLayout>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:id="@+id/list_item_data_row_ImageView_next"
        android:src="@drawable/ic_arrow_next"
        android:layout_gravity="bottom" />
</LinearLayout>